# ============================================================================
# HakemAI AI Module - Environment Configuration
# ============================================================================

# Database Configuration
# Use existing hakemAI database (shared with Backend)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=hakemAI
MONGO_URI=mongodb://localhost:27017/hakemAI
MONGO_DB_NAME=hakemAI

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
AI_MODEL=gpt-4o-mini

# Azure Computer Vision OCR (Optional - for logo-based insurer detection)
# Sign up at: https://portal.azure.com/#create/Microsoft.CognitiveServicesComputerVision
AZURE_CV_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_CV_KEY_1=your-api-key-here
AZURE_CV_KEY_2=your-backup-api-key-here
ENABLE_OCR_FALLBACK=true
OCR_MAX_DAILY_CALLS=100
OCR_COOLDOWN_SECONDS=60

# Optional: Debug Mode
DEBUG=false
